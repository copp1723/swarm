# Render Environment Variables Template
# Copy these to your Render Dashboard and replace placeholder values

# Core Application Settings
FLASK_ENV=production
NODE_ENV=production
PORT=10000
WEB_CONCURRENCY=2

# Database Configuration (Auto-generated by Render)
DATABASE_URL=<your-render-postgresql-url>
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# Redis Configuration (Replace with your Render Redis URL)
REDIS_URL=<your-render-redis-url>
REDIS_MAX_CONNECTIONS=50

# Celery Configuration (Use your actual Redis URL)
ENABLE_CELERY=true
CELERY_BROKER_URL=<your-render-redis-url>/1
CELERY_RESULT_BACKEND=<your-render-redis-url>/2

# Email Configuration (Add your Mailgun credentials)
MAILGUN_API_KEY=<your-mailgun-api-key>
MAILGUN_DOMAIN=mail.yourdomain.com
MAILGUN_SIGNING_KEY=<your-mailgun-signing-key>
DEFAULT_FROM_EMAIL=agent@yourdomain.com

# API Keys and Security (Generate secure values)
OPENROUTER_API_KEY=<your-openrouter-api-key>
SECRET_KEY=<generate-with-secrets.token_hex(32)>
JWT_SECRET_KEY=<generate-with-secrets.token_hex(32)>

# MCP Filesystem Configuration  
DISABLE_MCP_FILESYSTEM=true
MCP_FILESYSTEM_ALLOWED_DIRS=/app
MCP_FILESYSTEM_LOG_OPERATIONS=true

# Features
ENABLE_WEBSOCKETS=true
ENABLE_CONVOY=true
GRACEFUL_DEGRADATION=true
SECURITY_HEADERS_ENABLED=true

# Monitoring (Add your Sentry DSN)
SENTRY_DSN=<your-sentry-dsn>
HEALTH_CHECK_PATH=/ready

# SuperMemory Integration (Add your SuperMemory API key)
SUPERMEMORY_API_KEY=<your-supermemory-api-key>

# CORS Configuration (Update with your actual Render app URL)
ALLOWED_ORIGINS=https://your-app-name.onrender.com

# IMPORTANT SETUP NOTES:
# 1. Get Redis URL from your Render Redis service
# 2. Get DATABASE_URL from your Render PostgreSQL service  
# 3. Generate secure SECRET_KEY and JWT_SECRET_KEY
# 4. Add your API keys for OpenRouter, Mailgun, SuperMemory, Sentry
# 5. Update ALLOWED_ORIGINS with your actual Render app URL
# 6. Set DISABLE_MCP_FILESYSTEM=false after Node.js is confirmed working

