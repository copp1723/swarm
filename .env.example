# SWARM Multi-Agent System Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenRouter API Configuration
# Obtain a production key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# SWARM API Configuration
SWARM_DEV_API_KEY=your-dev-api-key-here
ALLOW_DEV_API_KEY=false

# Database Configuration
DATABASE_URL=sqlite:///instance/mcp_executive.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Email Service Configuration (Mailgun)
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain-here
MAILGUN_SIGNING_KEY=your-mailgun-webhook-signing-key-here
MAILGUN_WEBHOOK_URL=https://your-domain.com/webhooks/mailgun

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Redis Configuration (for production)
REDIS_URL=redis://localhost:6379/0

# Application Settings
FLASK_ENV=development
LOG_LEVEL=INFO

# Production Database (PostgreSQL)
PRODUCTION_DATABASE_URL=postgresql://user:password@localhost/dbname

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here-if-using-sentry